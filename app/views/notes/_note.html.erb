<%= tag.div id: dom_id(note), class: "rounded-lg border border-gray-200 p-3" do %>
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= note.content %></p>
      <p class="mt-1 text-xs text-gray-500">
        <%= note.user.full_name %> &middot; <%= time_ago_in_words(note.created_at) %> ago
      </p>
    </div>
    <% if policy(note).destroy? %>
      <%= button_to patient_note_path(note.patient, note), method: :delete,
          class: "ml-2 text-gray-400 hover:text-red-500",
          data: { turbo_confirm: "Delete this note?" } do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    <% end %>
  </div>
<% end %>
