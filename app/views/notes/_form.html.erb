<%= form_with(model: [patient, note], class: "flex gap-2", id: note.new_record? ? "new_note_form" : nil) do |f| %>
  <%= f.text_area :content, rows: 2, placeholder: "Add a note...",
      class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border text-sm" %>
  <%= f.submit(note.new_record? ? "Add" : "Update",
      class: "self-end rounded-lg bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer whitespace-nowrap") %>
<% end %>
