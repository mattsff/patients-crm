<%= page_header "Appointments" do %>
  <%= link_to "New Appointment", new_appointment_path, class: "rounded-lg bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
<% end %>

<div data-controller="calendar" data-calendar-date-value="<%= @date %>" data-calendar-view-value="<%= @view %>">
  <%# Calendar navigation %>
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-2">
      <button data-action="calendar#navigate" data-calendar-direction-param="prev"
              class="rounded-lg bg-white p-2 shadow-sm ring-1 ring-gray-300 hover:bg-gray-50">
        <svg class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
        </svg>
      </button>
      <h3 class="text-lg font-semibold text-gray-900 px-4">
        <% if @view == "day" %>
          <%= l(@date, format: :long) %>
        <% else %>
          <%= l(@date.beginning_of_week, format: :short) %> - <%= l(@date.end_of_week, format: :long) %>
        <% end %>
      </h3>
      <button data-action="calendar#navigate" data-calendar-direction-param="next"
              class="rounded-lg bg-white p-2 shadow-sm ring-1 ring-gray-300 hover:bg-gray-50">
        <svg class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </button>
    </div>

    <div class="flex rounded-lg shadow-sm">
      <button data-action="calendar#switchView" data-calendar-view-param="day"
              class="rounded-l-lg px-3 py-2 text-sm font-medium <%= @view == 'day' ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50' %>">
        Day
      </button>
      <button data-action="calendar#switchView" data-calendar-view-param="week"
              class="rounded-r-lg px-3 py-2 text-sm font-medium <%= @view == 'week' ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50' %>">
        Week
      </button>
    </div>
  </div>

  <%# Appointments list %>
  <div class="bg-white shadow rounded-xl overflow-hidden">
    <% if @view == "week" %>
      <% (@date.beginning_of_week..@date.end_of_week).each do |day| %>
        <% day_appointments = @appointments.select { |a| a.starts_at.to_date == day } %>
        <div class="border-b border-gray-200 last:border-b-0">
          <div class="bg-gray-50 px-4 py-2">
            <h4 class="text-sm font-medium text-gray-700 <%= day == Date.current ? 'text-indigo-600 font-semibold' : '' %>">
              <%= l(day, format: :long) %>
              <% if day == Date.current %><span class="text-xs">(Today)</span><% end %>
            </h4>
          </div>
          <% if day_appointments.any? %>
            <ul class="divide-y divide-gray-100">
              <% day_appointments.each do |appointment| %>
                <%= render "appointments/appointment_row", appointment: appointment %>
              <% end %>
            </ul>
          <% else %>
            <p class="px-4 py-3 text-sm text-gray-400">No appointments</p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <% if @appointments.any? %>
        <ul class="divide-y divide-gray-100">
          <% @appointments.each do |appointment| %>
            <%= render "appointments/appointment_row", appointment: appointment %>
          <% end %>
        </ul>
      <% else %>
        <p class="px-4 py-8 text-center text-sm text-gray-500">No appointments for this day</p>
      <% end %>
    <% end %>
  </div>
</div>
