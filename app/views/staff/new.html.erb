<%= page_header "Add Staff Member" %>

<div class="bg-white shadow rounded-xl p-6">
  <%= form_with(model: @user, url: staff_index_path, class: "space-y-6") do |f| %>
    <% if @user.errors.any? %>
      <div class="rounded-lg bg-red-50 p-4">
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border", required: true %>
      </div>
      <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border", required: true %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border", required: true %>
      </div>
      <div>
        <%= f.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :role, [["Staff", "staff"], ["Admin", "admin"]], {},
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
      </div>
    </div>

    <p class="text-sm text-gray-500">A temporary password will be generated. The staff member can reset it via the login page.</p>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel", staff_index_path, class: "rounded-lg bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= f.submit "Add Staff Member", class: "rounded-lg bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
