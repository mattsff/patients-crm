<%= page_header "Staff" do %>
  <%= link_to "Add Staff", new_staff_path, class: "rounded-lg bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
<% end %>

<div class="bg-white shadow rounded-xl overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @staff.each do |member| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= member.full_name %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.email %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= badge(member.role.capitalize, color: member.owner? ? "indigo" : member.admin? ? "blue" : "gray") %></td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <% if current_user.owner? && member != current_user %>
              <%= button_to "Remove", staff_path(member), method: :delete,
                  class: "text-red-600 hover:text-red-900",
                  data: { turbo_confirm: "Remove #{member.full_name} from the clinic?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
