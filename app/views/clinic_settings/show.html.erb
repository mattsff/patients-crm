<%= page_header "Clinic Settings" %>

<div class="bg-white shadow rounded-xl p-6">
  <%= form_with(model: @clinic, url: clinic_settings_path, method: :patch, class: "space-y-6") do |f| %>
    <% if @clinic.errors.any? %>
      <div class="rounded-lg bg-red-50 p-4">
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @clinic.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <legend class="text-base font-semibold text-gray-900 mb-4">General</legend>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= f.label :name, "Clinic Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
        <div>
          <%= f.label :timezone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.time_zone_select :timezone, nil, {},
              class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
        <div class="sm:col-span-2">
          <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :address, rows: 2, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend class="text-base font-semibold text-gray-900 mb-4">White Label</legend>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= f.label :logo, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center gap-4">
            <% if @clinic.logo.attached? %>
              <%= image_tag @clinic.logo, class: "h-12 w-12 rounded-lg object-cover" %>
            <% end %>
            <%= f.file_field :logo, accept: "image/*",
                class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mt-4" data-controller="color-picker">
        <div>
          <%= f.label :primary_color, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center gap-3">
            <%= f.color_field :primary_color, data: { color_picker_target: "input", action: "input->color-picker#update" },
                class: "h-10 w-14 rounded border border-gray-300 cursor-pointer" %>
            <div class="h-10 w-10 rounded-lg" data-color-picker-target="preview" style="background-color: <%= @clinic.primary_color %>"></div>
            <span class="text-sm text-gray-500"><%= @clinic.primary_color %></span>
          </div>
        </div>
        <div>
          <%= f.label :secondary_color, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center gap-3">
            <%= f.color_field :secondary_color, class: "h-10 w-14 rounded border border-gray-300 cursor-pointer" %>
            <div class="h-10 w-10 rounded-lg" style="background-color: <%= @clinic.secondary_color %>"></div>
            <span class="text-sm text-gray-500"><%= @clinic.secondary_color %></span>
          </div>
        </div>
      </div>
    </fieldset>

    <div class="flex justify-end">
      <%= f.submit "Save Settings", class: "rounded-lg bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
