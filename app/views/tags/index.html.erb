<%= page_header "Tags" %>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <%# New tag form %>
  <div class="bg-white shadow rounded-xl p-6">
    <h3 class="text-base font-semibold text-gray-900 mb-4">New Tag</h3>
    <%= form_with(model: @tag, url: tags_path, class: "flex items-end gap-3") do |f| %>
      <div class="flex-1">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border", placeholder: "Tag name" %>
      </div>
      <div>
        <%= f.label :color, class: "block text-sm font-medium text-gray-700" %>
        <%= f.color_field :color, value: "#6B7280", class: "mt-1 h-10 w-14 rounded border border-gray-300 cursor-pointer" %>
      </div>
      <%= f.submit "Create", class: "rounded-lg bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% end %>
  </div>

  <%# Existing tags %>
  <div class="bg-white shadow rounded-xl p-6">
    <h3 class="text-base font-semibold text-gray-900 mb-4">All Tags</h3>
    <% if @tags.any? %>
      <div class="space-y-2">
        <% @tags.each do |tag| %>
          <div class="flex items-center justify-between rounded-lg border border-gray-200 px-4 py-2">
            <div class="flex items-center gap-3">
              <div class="h-4 w-4 rounded-full" style="background-color: <%= tag.color %>"></div>
              <span class="text-sm font-medium text-gray-900"><%= tag.name %></span>
              <span class="text-xs text-gray-500"><%= tag.patients.count %> patients</span>
            </div>
            <% if policy(tag).destroy? %>
              <%= button_to tag_path(tag), method: :delete,
                  class: "text-gray-400 hover:text-red-500",
                  data: { turbo_confirm: "Delete '#{tag.name}' tag?" } do %>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">No tags yet. Create your first tag to categorize patients.</p>
    <% end %>
  </div>
</div>
